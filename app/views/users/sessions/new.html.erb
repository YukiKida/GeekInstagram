<div class="login-section">
  <div class="login-title">
    <p class="login-title-icon"><i class="fas fa-sign-in-alt"></i></p>
    <h2 class="login-title-text">GeekInstagramにログイン</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, :placeholder => "メールアドレス" , autofocus: true, autocomplete: "email" , class: 'text-form' %>
    </div>

    <div class="field">
      <%= f.password_field :password, :placeholder => "パスワード", autocomplete: "off" , class: 'text-form' %>
    </div>


    <div class="actions">
      <%= f.submit "ログイン" , class: 'submit-btn' %>
    </div>

  <% end %>

  <%= render "users/shared/links" %>
</div>
