<h1>GeekInstagram</h1>
<h3>投稿一覧</h3>

<h3>投稿を検索</h3>
<%= form_tag({controller: "imgposts", action: "index"}, method: :get ) do %>
  <%= text_field_tag :search %>
  <%= submit_tag '検索する'  %>
<% end %>

<%= link_to "新規投稿ページへ", new_imgpost_path %>

<% if user_signed_in? %>
  <%= link_to "マイページへ", user_path(current_user.id) %>
<% end %>

<div class="imgposts-container">
  <% @imgposts.each do |t| %>
    <div class="imgpost">
      <%= t.user.email %>
      <%= image_tag t.image_url, size: "250x250" if t.image? %>
      <%= t.title %>
      <%= t.body %>
      <% if user_signed_in? %>
        <% if current_user.already_liked?(t) %>
            <%= link_to imgpost_like_path(id: t.id, imgpost_id: t.id), method: :delete do %>
                <i class="far fa-heart"></i><%= t.likes.count %>
            <% end %>
        <% else %>
            <%= link_to imgpost_likes_path(id: t.id, imgpost_id: t.id), method: :post do %>
                <i class="far fa-heart"></i><%= t.likes.count %>
            <% end %>
        <% end %>
      <% else %>
        <i class="far fa-heart"></i><%= t.likes.count %>
      <% end %>
      <%= t.created_at %>
      <%= link_to "詳細へ", imgpost_path(t.id) %>
      <%= link_to "編集する", edit_imgpost_path(t.id) %>
      <%= button_to "削除する", imgpost_path(t.id), method: :delete %>
    </div>
  <% end %>
</div>
<%= button_to 'ログアウト', destroy_user_session_path, method: :delete %>